

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tennis Mingle</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    
    <link href="https://unpkg.com/gijgo@1.9.13/css/gijgo.min.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <header>
        <div class="row top-nav">
            <div class="site-logo col-2 text-center">
                <a class="navbar-brand site-title p-0" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Images/logo.png" /></a>
            </div>
            <nav class="navbar col-7 navbar-expand-sm navbar-toggleable-sm navbar-light h-100 cities-collapse font-weight-bolder">
                <div class="container" style="margin: 0px">

                    <div class="justify-content-start">
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                                aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse text-uppercase" id="bs-example-navbar-collapse-1">
                            <ul class="nav navbar-nav">
                                @await Component.InvokeAsync("CitiesList")
                            </ul>
                        </div>
                    </div>

                    <div class="user-area justify-content-end">
                        <span>sign up</span>
                        <span>|</span>
                        <span>login</span>
                    </div>
                </div>
            </nav>
            <div class="navbar-venue-partner col-3 text-center">
                <ul class="p-0 m-0">
                    <a class="navbar-venue-partner-link" asp-area="" asp-controller="Home" asp-action="Index">become a venue partner</a>
                </ul>
            </div>
        </div>
    </header>
    <div class="container-fluid">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - TennisMingle <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://unpkg.com/gijgo@1.9.13/js/gijgo.min.js" type="text/javascript"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
